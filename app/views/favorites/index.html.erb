<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="form-user style-1 rounded has-shadow-1">
			<div class="row">
				<div class="col-md-6 col-md-offset-3">
					<table class="table table-striped">
						<div class="actions row">

							<h1>お気に入り一覧</h1>
							<% @favorites.each do |favorite| %>
							 <%= link_to store_path(favorite.store) do %>
								<%= attachment_image_tag favorite.store, :image, :fill, 100, 100, format:'jpeg' %>
							 <% end %>
								<p>店名 : <%= favorite.store.storename %></p>
								<p>場所 : <%= favorite.store.city %></p>
								<%= link_to store_favorite_path(@favorite), method: :delete,  class: "glyphicon glyphicon-heart" do%>
							     <%= @store.favorites.count %> いいね
							                      <% end %>

							    <% end %></p>

                       </div>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>