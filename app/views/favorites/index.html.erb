<!DOCTYPE HTML>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="users.css">
</head>
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="form-user style-1 rounded has-shadow-1">
			<div class="row">
				<div class="col-md-6 col-md-offset-3">
						<div class="actions row">

							<h1>お気に入り一覧</h1>
							<% @favorites.each do |favorite| %>
							 <%= link_to store_path(favorite.store) do %>
								<%= attachment_image_tag favorite.store, :image, :fill, 100, 100, format:'jpeg' %>
								<p>店名 : <%= favorite.store.storename %></p>
								<% end %>
								<p>場所 : <%= favorite.store.city %></p>

	                         <nubr> お気に入り解除  <%= link_to store_favorite_path(store_id: favorite.store.id,id: favorite.id), method: :delete,  class: "glyphicon glyphicon-remove-sign" do%>
                            <% end %></nubr>
                      	    <% end %>



                       </div>
				</div>
			</div>
		</div>
	</div>
</div>