<!DOCTYPE HTML>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="users.css">
</head>
	<body>
	  <div class="row">
		<div class="col-md-8 col-md-offset-2">
		  <div class="form-user style-1 rounded has-shadow-1">
			<div class="row">
				<div class="col-md-6 col-md-offset-3">
				  <div class="actions row">
				    <div class="box">

						<h2>顧客一覧情報</h2>

						<% @users. each do |user| %>
						  <p><%= user.name %></p>
						  <p><%= user.kana %></p>
						  <%= link_to "詳細", user_path(user.id) %>
			            <% end %>

			      </div>
				</div>
			 </div>
		  </div>
		</div>
	  </div>
	</div>
  </body>
</html>

